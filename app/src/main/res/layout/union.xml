<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="5dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="7dp">



                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/member" />


                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="তামিম আহমেদ অভি"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:gravity="left|top"
                        android:textStyle="normal"
                        android:paddingTop="15dp"
                        android:fontFamily="@font/hind"/>


                    <TextView
                        android:id="@+id/podobi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind"
                        android:gravity="left|top"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="পদবিঃ চেয়ারম্যান "
                        android:textColor="#FF2020"
                        android:textSize="14dp"
                        android:textStyle="normal" />


                </LinearLayout>





            </LinearLayout>


            <TextView
                android:id="@+id/upozila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="উপজেলার নামঃ  "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/union"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ইউনিয়নের নামঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/village"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="গ্রামের নামঃ"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>





            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="মোবাইলঃ"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>







            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">




                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="100dp"
                    android:foreground="?attr/selectableItemBackground"/>




                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/delete"
                    android:layout_alignParentRight="true"
                    android:foreground="?attr/selectableItemBackground"/>


            </RelativeLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>