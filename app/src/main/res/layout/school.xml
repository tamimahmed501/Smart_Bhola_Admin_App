<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/imageicon" />

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রতিষ্ঠানঃ \nবোড়ামারা সরকারি প্রাথমিক বিদ্যালয়"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রধান শিক্ষকঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/upozila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="উপজেলাঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ঠিকানাঃ মাইজপাড়া, নড়াইল সদর, নড়াইল।"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>




                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোবাইলঃ  01610069765"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:paddingLeft="10dp"
                    android:textStyle="normal"/>





            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">




                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="100dp"
                    android:foreground="?attr/selectableItemBackground"/>




                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/delete"
                    android:layout_alignParentRight="true"
                    android:foreground="?attr/selectableItemBackground"/>


            </RelativeLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>