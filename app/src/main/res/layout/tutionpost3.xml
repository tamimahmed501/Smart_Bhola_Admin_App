<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F0F0"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#DACED0DA"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="বিস্তারিত তথ্য"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="#2C2A2A"
                        android:fontFamily="@font/hind"/>


                    <ImageView
                        android:id="@+id/cross"
                        android:layout_width="19dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/cross" />


                </RelativeLayout>


            </LinearLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/statusbar"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="30dp">





                        <ImageView
                            android:id="@+id/profilepic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile"/>

                    </androidx.cardview.widget.CardView>









                </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="74dp">



                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tamim Ahmed"
                        android:textSize="19dp"
                        android:fontFamily="@font/hind"
                        android:paddingTop="5dp"
                        android:textColor="#E8131212"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:33 PM, Saturday."
                        android:textColor="#384EC6"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/hind"
                        android:textSize="15dp"/>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="80dp">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="জরুরি ভিত্তিতে একজন বাংকা ও ইংরেজির শিক্ষক প্রুয়োজন"
                        android:textColor="#393939"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:fontFamily="@font/hind"
                        android:textSize="15dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="শ্রেনীঃ "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/classs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="দশম শ্রেনী"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="বিষয়ঃ "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="বাংলা ও ইংরেজি"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>







                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="সময়ঃ    "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="রাত (২ ঘন্টা)"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="দিনঃ    "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="সপ্তাহে ৬ দিন"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="শিক্ষকঃ   "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female Teacher"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="বেতনঃ   "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="২০০০ ট (মাসিক)"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="এরিয়াঃ   "
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/hind"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>


                        <TextView
                            android:id="@+id/adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="লালমোহন, ভোলা"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/hind"
                            android:textColor="#313133"
                            android:textStyle="bold"/>


                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:weightSum="2">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/delete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/black"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="DELETE"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/call"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            app:cardBackgroundColor="#354DD5"
                            android:layout_weight="1"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="CALL"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>







                </LinearLayout>




            </RelativeLayout>



        </LinearLayout>






    </androidx.cardview.widget.CardView>










</LinearLayout>