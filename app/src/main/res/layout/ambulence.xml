<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="7dp">




                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ambulance"
                        android:padding="10dp"/>



                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="মল্লিক ডায়াগনষ্টিক সেন্টার"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/hind"/>




            </LinearLayout>





            <TextView
                android:paddingTop="10dp"
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ঠিকানাঃ  মাইজপাড়া, নড়াইল সদর, নড়াইল।"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>



            <TextView
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="রেজিষ্ট্রেশন নম্বরঃ   983797278344443"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>



            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="মোবাইলঃ   01610069765"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="6">




                <androidx.cardview.widget.CardView
                    android:id="@+id/approve"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/statusbar">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/hind"
                        android:gravity="center"
                        android:text="Approve"
                        android:textColor="@color/white"
                        android:textSize="19dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardBackgroundColor="#E9F63E30">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/hind"
                        android:gravity="center"
                        android:text="Delete"
                        android:textColor="@color/white"
                        android:textSize="19dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/call"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#4259D8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/hind"
                        android:gravity="center"
                        android:text="Call"
                        android:textColor="#FFFFFF"
                        android:textSize="19dp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>