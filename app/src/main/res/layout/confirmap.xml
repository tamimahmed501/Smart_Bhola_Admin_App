<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4FA"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="1dp"
        android:layout_marginRight="10dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/statusbar"
                android:layout_height="35dp">


                <TextView
                    android:id="@+id/clinic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/mukto"
                    android:gravity="center|left"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Tamim Diagnostic Center"
                    android:textColor="#E8FFFFFF"
                    android:textSize="19dp"
                    android:textStyle="bold" />




            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/statusbar"
                android:layout_height="35dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/anadika"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Appointment ID:"
                    android:textColor="#E8FFFFFF"
                    android:textSize="16dp" />



                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/mustafakamal"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:textColor="#E8FFFFFF"
                    android:paddingRight="18dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"/>



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/patient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Patient: Tamim Ahmed"
                            android:fontFamily="@font/hind"
                            android:textSize="18dp"
                            android:paddingTop="6dp"
                            android:textStyle="bold"
                            android:textColor="#3151FF"/>







                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doctor: Tasnim Jara"
                            android:fontFamily="@font/hind"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#00B1A0"/>



                        <TextView
                            android:id="@+id/problem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/timesnewroman"
                            android:paddingTop="5dp"
                            android:text="Problem: Not Identified"
                            android:textStyle="bold"
                            android:textColor="#323232"
                            android:textSize="15dp" />



                        <TextView
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time: 12:45 AM, 23/01/2024"
                            android:fontFamily="@font/timesnewroman"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:textColor="#323232"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Appointment Date: Sun "
                            android:fontFamily="@font/timesnewroman"
                            android:textSize="15dp"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textColor="#323232"/>


                        <TextView
                            android:id="@+id/payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment: Unpaid "
                            android:fontFamily="@font/timesnewroman"
                            android:textSize="15dp"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textColor="#323232"/>


                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile: 01610069765"
                            android:fontFamily="@font/timesnewroman"
                            android:textSize="15dp"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textColor="#323232"/>

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status: Pending"
                            android:fontFamily="@font/timesnewroman"
                            android:textSize="15dp"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textColor="#FF4141"/>



                    </LinearLayout>


                </LinearLayout>




                <TextView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="⭐⭐⭐"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/anadika"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="#0C0C0C"
                    android:textSize="13dp"/>








                <androidx.cardview.widget.CardView
                    android:id="@+id/call"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="150dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="30dp">




                    <ImageView
                        android:id="@+id/profilepic"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:padding="10dp"
                        android:src="@drawable/call2"/>


                </androidx.cardview.widget.CardView>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:weightSum="3"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="8dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/absent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="5dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_margin="3dp"
                        android:layout_weight="1">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Absent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:background="#A1131625"
                            android:fontFamily="@font/mustafakamal"
                            android:textColor="#FFFFFF"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notify"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="5dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_margin="3dp"
                        android:layout_weight="1">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Notify"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:background="#A1131625"
                            android:fontFamily="@font/mustafakamal"
                            android:textColor="#FFFFFF"/>


                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/success"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_margin="3dp"
                        android:layout_weight="1">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Success"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:background="#A1131625"
                            android:fontFamily="@font/mustafakamal"
                            android:textColor="#FFFFFF"/>


                    </androidx.cardview.widget.CardView>





                </LinearLayout>



            </RelativeLayout>








        </LinearLayout>



    </androidx.cardview.widget.CardView>










</LinearLayout>