<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/statusbar"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="30dp">





                    <ImageView
                        android:id="@+id/profilepic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/profile"/>

                </androidx.cardview.widget.CardView>









            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="74dp">



                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tamim Ahmed"
                    android:textSize="19dp"
                    android:fontFamily="@font/hind"
                    android:paddingTop="5dp"
                    android:textColor="#E8131212"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12:33 PM, Saturday."
                    android:textColor="#636FB1"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:fontFamily="@font/hind3"
                    android:textSize="13dp"/>




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="80dp">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="জরুরি ভিত্তিতে একজন বাংকা ও ইংরেজির শিক্ষক প্রুয়োজন"
                    android:textColor="#393939"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/hind"
                    android:textSize="15dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="বিষয়ঃ "
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/hind"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বাংলা ও ইংরেজি"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/hind3"
                        android:textColor="#313133"
                        android:textStyle="bold"/>


                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="সময়ঃ    "
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/hind"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="রাত (২ ঘন্টা)"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/hind3"
                        android:textColor="#313133"
                        android:textStyle="bold"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="বেতনঃ   "
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/hind"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                    <TextView
                        android:id="@+id/salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="২০০০ ট (মাসিক)"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/hind3"
                        android:textColor="#313133"
                        android:textStyle="bold"/>


                </LinearLayout>








            </LinearLayout>




            <TextView
                android:id="@+id/tid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tution: #76"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/statusbar"
                android:fontFamily="@font/mustafakamal"/>






        </RelativeLayout>





    </androidx.cardview.widget.CardView>










</LinearLayout>