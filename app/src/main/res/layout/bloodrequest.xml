<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E4E4E4"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Posted BY:   তামিম আহমেদ অভি"
                    android:maxLines="2"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textStyle="normal"
                    android:background="@color/statusbar"
                    android:fontFamily="@font/hind"/>






                                    <TextView
                                        android:id="@+id/patientname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Patient:   তামিম আহমেদ অভি"
                                        android:maxLines="2"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:paddingLeft="10dp"
                                        android:gravity="left|top"
                                        android:textStyle="normal"
                                        android:paddingTop="10dp"
                                        android:fontFamily="@font/hind"/>


                <TextView
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/hind"
                    android:paddingLeft="10dp"
                    android:text="রক্তের গ্রুপঃ   B+"
                    android:textColor="#FF0B0B"
                    android:textSize="17dp"
                    android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="রক্তের পরিমানঃ ১০ ব্যাগ"
                                        android:layout_alignParentRight="true"
                                        android:paddingLeft="10dp"
                                        android:textSize="17dp"
                                        android:textStyle="normal"
                                        android:textColor="#FF0B0B"
                                        android:fontFamily="@font/mavenpro"/>





                <TextView
                    android:id="@+id/problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="সমস্যাঃ  সিজার"
                    android:textColor="#222222"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:gravity="left|top"
                    android:textStyle="normal"
                    android:fontFamily="@font/hind3"/>



                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="তারিখঃ 31/04/2002"
                    android:textColor="#222222"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:gravity="left|top"
                    android:textStyle="normal"
                    android:fontFamily="@font/hind3"/>


                <TextView
                    android:id="@+id/hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="16dp"
                    android:maxLines="2"
                    android:paddingLeft="10dp"
                    android:textStyle="normal"
                    android:paddingRight="10dp"
                    android:text="হসপিটালঃ নরাইল সদর হসপিটাল"
                    android:fontFamily="@font/hind3"/>



                <TextView
                    android:id="@+id/upazila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="16dp"
                    android:maxLines="2"
                    android:paddingLeft="10dp"
                    android:textStyle="normal"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="উপজেলাঃ নড়াইল সদর"
                    android:fontFamily="@font/hind3"/>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="6">




                    <androidx.cardview.widget.CardView
                        android:id="@+id/approve"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/statusbar">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/hind"
                            android:gravity="center"
                            android:text="Approve"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/cancel"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        app:cardCornerRadius="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="#E9F63E30">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/hind"
                            android:gravity="center"
                            android:text="Delete"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/call"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#4259D8">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/hind"
                            android:gravity="center"
                            android:text="Call"
                            android:textColor="#FFFFFF"
                            android:textSize="19dp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>






            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</LinearLayout>