<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D5DF"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/statusbar"
                android:layout_height="45dp">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/prantobold"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="call Alter!"
                    android:textColor="#E8FFFFFF"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/mustafakamal"
                    android:paddingLeft="10dp"
                    android:paddingRight="18dp"
                    android:text="0"
                    android:textColor="#E8FFFFFF"
                    android:textSize="19dp" />



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Someone try to send sonti"
                            android:fontFamily="@font/mavenpro"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:paddingTop="10dp"
                            android:paddingBottom="20dp"
                            android:textColor="#333333"/>




                    </LinearLayout>


                </LinearLayout>







            </RelativeLayout>








        </LinearLayout>



    </androidx.cardview.widget.CardView>










</LinearLayout>