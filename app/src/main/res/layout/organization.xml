<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/card"
        app:cardElevation="5dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/social" />



                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="মানবিক নড়াইল"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:fontFamily="@font/mustafakamal"/>




            </LinearLayout>





            <TextView
                android:paddingTop="10dp"
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রতিষ্ঠানের নামঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>



            <TextView
                android:id="@+id/founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="প্রতিষ্ঠাতার নামঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="কাজের বিবরনঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="আওতাধীন এলাকাঃ"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>



            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="মোবাইল নম্বরঃ "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>


            <TextView
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="নিবন্ধন নম্বরঃ"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">




                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="100dp"
                    android:foreground="?attr/selectableItemBackground"/>




                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/delete"
                    android:layout_alignParentRight="true"
                    android:foreground="?attr/selectableItemBackground"/>


            </RelativeLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>